<Window x:Class="SPGenerator.UI.Views.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="220" Width="320" WindowStartupLocation="CenterScreen"  Name="SettingWindow" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Row="0" Grid.Column="0">Insert SP Name Prefix</Label>
        <TextBox Grid.Row="0" Name="txtInsertSpPrefix" Grid.Column="1" Text="{Binding PrefixInsertSp}"></TextBox>
        <Label Grid.Row="1" Grid.Column="0">Update SP Name Prefix</Label>
        <TextBox Grid.Row="1" Name="txtUpdateSpPrefix" Grid.Column="1" Text="{Binding PrefixUpdateSp}" ></TextBox>
        <Label Grid.Row="2" Grid.Column="0">Input Parameter Prefix</Label>
        <TextBox Grid.Row="2" Name="txtInputParaPrefix" Grid.Column="1" Text="{Binding PrefixInputParameter}"></TextBox>
        <Label Grid.Row="3" Grid.Column="0">Where Parameter Prefix</Label>
        <TextBox Grid.Row="3" Name="txtWhereParaPrefix" Grid.Column="1" Text="{Binding PrefixWhereParameter}"></TextBox>
        <Label Grid.Row="4" Grid.Column="0" >Error Handling</Label>
        <ComboBox Grid.Row="4" Grid.Column="1" ItemsSource="{Binding ErrorHandlingOptions}" SelectedValue="{Binding ErrorHandling, Mode=TwoWay}">
        </ComboBox>
        <Button Grid.Row="5" Grid.Column="0"  Command="{Binding SaveCommand}" CommandParameter="{Binding ElementName=SettingWindow}">Save</Button>
        <Button Grid.Row="5" Grid.Column="1" Command="{Binding CancelCommand}" CommandParameter="{Binding ElementName=SettingWindow}">Cancel</Button>
    </Grid>
</Window>
